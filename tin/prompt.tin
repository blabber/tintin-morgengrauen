#NOP {== Alles was mit Prompts zu tun hat};

#EVENT {RECEIVED PROMPT}
{
	#IF {"%1" == "> "}
	{
		#IF {$GMCP[room][exits_pending]}
		{
			#VARIABLE {GMCP[room][exits_pending]} {0};
			@GMCP_EXITS{};
		};

		@MAP_OVERRIDE_NOFOLLOW{0};
	};
	#ELSE
	{
		@MAP_OVERRIDE_NOFOLLOW{1};
	}

	#SCREEN clear square {-1} {1} {-1} {-1};
	#SHOW {%1} {-1};
	#LINE gag;
};
