#NOP {== Alles was mit Prompts zu tun hat};

#EVENT {RECEIVED PROMPT}
{
	#IF {"%1" == "> "}
	{
		#LOCAL {_prompt_mode} {regular};
	};
	#ELSE
	{
		#LOCAL {_prompt_mode} {other};
	};

	@PUBSUB_PUBLISH{prompt_received; $_prompt_mode};

	#SCREEN clear square {-1} {1} {-1} {-1};
	#SHOW {%1} {-1};
	#LINE gag;
};
